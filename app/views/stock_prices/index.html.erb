<%= form_tag(stock_prices_path, method: :get) do %>
  <div class="search-form">
    <%= text_field_tag :search, params[:search], placeholder: "Search stock ticker" %>
    <%= submit_tag "Search", name: nil %>
  </div>
<% end %>

<div class="stock-details">
  <h1><%= @stock_price.ticker %></h1>
  <p>Current Price: $<%= @stock_price.current_price_cents.to_f / 100 %></p>
</div>